{
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.preferredDarkColorTheme": "One Dark Pro",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },

    "editor.renderWhitespace": "all",
    "editor.rulers": [88, 100, 120],
    "editor.suggestSelection": "first",

    "explorer.confirmDragAndDrop": false,

    "files.associations": {
        "*.desktop": "ini",
        "flake8": "ini",
        "*.avsc": "json"
    },
    "files.trimTrailingWhitespace": true,

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // Terminal settings ///////////////////////////////////////////////////////////////
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",

    // Proofing and language //////////////////////////////////////////////////////////
    "cSpell.language": "en,nl",
    "cSpell.userWords": [
        "dtap", "gitops", "sasl", "structlog"
    ],

    // Python settings /////////////////////////////////////////////////////////////////
    "[python]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.formatting.provider": "black",
    "python.sortImports.args": [
        "--profile", "black"
    ],

    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--disable missing-function-docstring"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length 88"
    ],

    // Jupyter notebook ////////////////////////////////////////////////////////////////
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    // Java settings ///////////////////////////////////////////////////////////////////
    "[java]": {
        "editor.defaultFormatter": "richardwillis.vscode-spotless-gradle",
        "editor.codeActionsOnSave": {
            "source.fixAll.spotlessGradle": true
          },
        "files.trimTrailingWhitespace": false
    },

    "redhat.telemetry.enabled": false,
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/home/bremme/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",

    "spotlessGradle.format.enable": true,
    "spotlessGradle.diagnostics.enable": true,

    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "vsicons.dontShowNewVersionMessage": true,
    "explorer.confirmDelete": false,

    // "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
}
