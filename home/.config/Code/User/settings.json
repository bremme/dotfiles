{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },

    "editor.fontFamily": "'FiraCode Nerd Font Mono','Droid Sans Mono', 'monospace', 'monospace'",
    "editor.fontSize": 14,
    "editor.fontWeight": "500",

    "editor.renderWhitespace": "all",
    "editor.rulers": [88, 100, 120],
    "editor.suggestSelection": "first",
    "editor.inlineSuggest.enabled": true,

    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    "files.associations": {
        "*.desktop": "ini",
        "flake8": "ini",
        "*.avsc": "json",
        ".prettierrc": "yaml"
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 30000,
    "update.showReleaseNotes": false,

    "git.confirmSync": false,
    "git.autofetch": true,

    "redhat.telemetry.enabled": false,

    "vsicons.dontShowNewVersionMessage": true,

    // Terminal settings ///////////////////////////////////////////////////////////////
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",

    // Proofing and language //////////////////////////////////////////////////////////
    "cSpell.language": "en,nl",
    "cSpell.userWords": ["dtap", "gitops", "isort", "jupyter", "pylint", "sasl", "structlog"],

    // Formatter settings //////////////////////////////////////////////////////////////
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },

    "prettier.singleQuote": false,
    "prettier.printWidth": 100,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,

    // Python settings /////////////////////////////////////////////////////////////////
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },

        "editor.formatOnType": true
    },
    "python.analysis.autoImportCompletions": true,

    "isort.args": ["--profile", "black"],
    "flake8.args": ["--max-line-length", "88"],
    "pylint.args": ["--disable missing-function-docstring"],

    // Jupyter notebook ////////////////////////////////////////////////////////////////
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    // Markdown settings ///////////////////////////////////////////////////////////////
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },

    // Typescript settings /////////////////////////////////////////////////////////////
    "[typescript]": {},

    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    }

